<Application
    x:Class="Burls.Windows.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Burls.Windows">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/TextBlock.xaml" />
                <ResourceDictionary Source="ms-appx:///Themes/Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:Double x:Key="SettingActionControlMinWidth">240</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
