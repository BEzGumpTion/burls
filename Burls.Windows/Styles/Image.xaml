<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Burls.Windows.Styles">

    <Style x:Key="BaseImageIconStyle" TargetType="{x:Type Image}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="MediumImageIconStyle" TargetType="{x:Type Image}" BasedOn="{StaticResource BaseImageIconStyle}">
        <Setter Property="Height" Value="24" />
        <Setter Property="Width" Value="24" />
    </Style>

    <Style x:Key="BigImageIconStyle" TargetType="{x:Type Image}" BasedOn="{StaticResource BaseImageIconStyle}">
        <Setter Property="Height" Value="48" />
        <Setter Property="Width" Value="48" />
    </Style>

</ResourceDictionary>